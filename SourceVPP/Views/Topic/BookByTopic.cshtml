@model IEnumerable<SourceVPP.Models.Sach>

@{
    ViewBag.Title = "BookByTopic";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<p style="text-align: center; font-size: 30px; margin-top: 10px">SÁCH THEO CHỦ ĐỀ</p>

@if (ViewBag.kq != null)
{
    <p style="text-align:center; font-weight: bold; color: red">@ViewBag.kq</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col text-center">
                <img src="~/Content/images/product/@item.AnhBia" style="width: 150px; height: 200px">
                <div class="card-body">
                    <h5 class="card-title" style="font-size: 15px">Tiêu đề: @item.MaSach @item.TenSach</h5>
                    @Html.ActionLink("Xem chi tiết", "XemChiTiet", "Sach", new { id = item.MaSach }, new { style = "text-decoration: none" })
                </div>
            </div>
        }
    </div>
}

