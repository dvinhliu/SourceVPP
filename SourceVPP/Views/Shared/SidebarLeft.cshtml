@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SidebarLeft</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/carousel.css">
    <style>
        .custom-prev, .custom-next {
            background-color: rgba(255, 0, 0, 0.5);
            border-radius: 50%;
            width: 50px;
            height: 50px; 
            top: 50%;
            transform: translateY(-50%);
        }
        .carousel {
            position: relative;
        }
        .carousel-control-prev {
            left: 10px;
        }
        .carousel-control-next {
            right: 10px;
        }
    </style>
</head>
<body>
    <div id="carouselSidebar" class="carousel" data-bs-ride="carousel" style="margin-top: 10px; margin-bottom: 20px">
        <div class="carousel-inner">
            @Html.Action("CompanyPartial", "Company")
        </div>
        <button class="carousel-control-prev custom-prev" type="button" data-bs-target="#carouselSidebar" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next custom-next" type="button" data-bs-target="#carouselSidebar" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="~/Content/js/carousel.js"></script>
</body>
</html>
