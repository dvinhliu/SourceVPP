@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Header</title>
    <script src="~/Content/js/User.js"></script>
    <style>
        /* Bao toàn bộ header để style không ảnh hưởng đến các trang khác */
        .custom-header .nav-item {
            margin-right: 20px;
        }

        .custom-header .top-bar {
            background-color: #C43240;
            padding: 0;
            margin-bottom: 0px; /* Loại bỏ khoảng cách dưới top-bar */
        }

            .custom-header .top-bar .nav-link {
                color: white;
                margin-left: 15px;
            }

                .custom-header .top-bar .nav-link:hover {
                    color: #adb5bd;
                }

        .custom-header .nav-item .nav-link {
            color: white;
            font-weight: 500;
        }

            .custom-header .nav-item .nav-link:hover {
                color: #adb5bd;
            }

        .custom-header .form-inline {
            display: flex;
            position: relative; /* Để icon nằm trong ô input */
        }

        .custom-header .form-group {
            display: flex; /* Để input nằm trên cùng một hàng */
            flex-grow: 1;
        }

        .custom-header .form-control {
            height: 40px; /* Điều chỉnh chiều cao của input */
            padding-right: 35px; /* Chừa khoảng trống cho icon bên phải */
            width: 100%;
            border-radius: 4px;
        }

        .custom-header .btn {
            position: absolute;
            right: 5px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            padding: 0;
        }

            .custom-header .btn i {
                font-size: 18px;
                color: white;
                background-color: #C43240;
                padding: 8px 20px;
            }

        /* Điều chỉnh khoảng cách giữa các phần */
        .custom-header .navbar {
            margin-top: 0px;
            padding: 0;
        }

        .custom-header .container {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <!-- Custom header section -->
    <div class="custom-header">
        <!-- Top-bar section -->
        <div class="top-bar">
            <div class="container d-flex justify-content-end">
                <ul class="navbar-nav flex-row">
                    <li class="nav-item">
                        <span class="nav-link" id="user-info" style="font-size: 13px"></span>
                    </li>
                    <li class="nav-item" id="logout-item" style="display:none;">
                        <a class="nav-link" href="javascript:void(0);" onclick="logout()" style="font-size: 13px">Đăng Xuất</a>
                    </li>
                    <li class="nav-item" id="login-item">
                        <a class="nav-link" href="/Home/Login" style="font-size: 13px">Đăng nhập</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>
