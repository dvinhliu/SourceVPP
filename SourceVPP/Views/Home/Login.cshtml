@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .nav-item {
            margin-right: 20px;
        }

        .top-bar {
            background-color: #C43240;
            padding: 5px 0;
        }

        .top-bar .nav-link {
            margin-left: 15px;
            font-size: 22px;
        }

        .top-bar .nav-link:hover {
            color: #adb5bd;
        }

        .logo img {
            max-height: 80px; /* Giới hạn chiều cao tối đa */
            width: 100%; /* Đảm bảo chiếm 100% chiều rộng */
            object-fit: contain; /* Đảm bảo logo không bị méo */
        }
    </style>
</head>
<body>
    <div class="top-bar py-2">
        <div class="container">
            <div class="row w-100 align-items-center">
                <!-- Bên trái: Logo và Đăng nhập -->
                <div class="col-2 p-0">
                    <div class="logo">
                        <a href="/">
                            <img src="~/Content/images/logo/logoclipit.png" alt="Logo" style="width: 80%" height="80">
                        </a>
                    </div>
                </div>
                <div class="col-8 d-flex align-items-center">
                    <!-- Đăng nhập -->
                    <ul class="navbar-nav flex-row ms-3">
                        <li class="nav-item text-white">
                            <a class="nav-link" href="/Home/Login">Đăng nhập</a>
                        </li>
                    </ul>
                </div>

                <!-- Bên phải: Hỗ trợ -->
                <div class="col-2 text-end">
                    <a href="#!" class="text-decoration-none" style="color: white">Bạn cần giúp đỡ</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Login 11 - Bootstrap Brain Component -->
    <section class="py-3 py-md-5 py-xl-8 bg-white">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="mb-5">
                        <h2 class="display-5 text-center">Đăng nhập</h2>
                        <p class="text-center m-0">Bạn mới biết đến Sopee? <a style="text-decoration: none; color: #ee4d2d" href="#!">Đăng ký</a></p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10 col-xl-8">
                    <div class="row gy-5 justify-content-center">
                        <div class="col-12 col-lg-5">
                            <form action="#!">
                                <div class="row gy-3 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control border-0 border-bottom rounded-0" name="email" id="email" placeholder="name@example.com" required>
                                            <label for="email" class="form-label">Email</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control border-0 border-bottom rounded-0" name="password" id="password" value="" placeholder="Password" required>
                                            <label for="password" class="form-label">Mật khẩu</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="row justify-content-between">
                                            <div class="col-6">
                                                <!-- Placeholder for future content -->
                                            </div>
                                            <div class="col-6">
                                                <div class="text-end">
                                                    <a href="#!" class="link-secondary text-decoration-none">Quên mật khẩu?</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn btn-primary btn-lg" type="submit">ĐĂNG NHẬP</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-12 text-center mt-3">
                            <div class="d-flex align-items-center justify-content-center gap-3" style="width: 100%;">
                                <div class="bg-dark flex-grow-1" style="height: 1px;"></div>
                                <div class="px-2">Hoặc</div>
                                <div class="bg-dark flex-grow-1" style="height: 1px;"></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 d-flex align-items-center">
                            <div class="d-flex gap-3 flex-column w-100">
                                <a href="#!" class="btn btn-lg btn-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                                        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                                    </svg>
                                    <span class="ms-2 fs-6">Google</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
