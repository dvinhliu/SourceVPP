            apiKey: "AIzaSyC7PsMUUTQancVCjMl0NnbDVDl0tpWdZDY",
            authDomain: "ecommercevpp.firebaseapp.com",
            projectId: "ecommercevpp",
            storageBucket: "ecommercevpp.appspot.com",
            messagingSenderId: "867737625124",
