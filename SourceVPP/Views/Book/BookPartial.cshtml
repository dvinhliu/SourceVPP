@model IEnumerable<SourceVPP.Models.Sach>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col text-center">
            <img src="~/Content/images/product/@item.AnhBia" style="width: 150px; height: 200px">
            <div class="card-body">
                <h5 class="card-title" style="font-size: 15px">Tiêu đề: @item.MaSach @item.TenSach</h5>
                @Html.ActionLink("Xem chi tiết", "XemChiTiet", null, new { id = item.MaSach }, new { style = "text-decoration: none" })
            </div>
        </div>
    }
</div>
